<% layout('layout/biolerplate.ejs') %> 

  

<div class="row"> 
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">         
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" class="needs-validation" novalidate>
            <!-- title  -->
            <div class="mb-3">
                <label class='from-label'for="title">Title</label>
                <input type="text" class="form-control" id="title"name="campground[title]" value="<%=campground.title %>" required>
            </div>
            
            <!-- location -->
            <div class="mb-3">
                <label class='from-label' for="location">Location</label>
                <input type="text" class="form-control" id="location" name="campground[location]" value="<%= campground.location%>" required>
            </div>
            
            <!-- Image -->
            <div class="mb-3">
                <label class='from-label' for="image">Image URL</label>
                <input class="form-control" id="image" name="campground[image]" > 
            </div>
            
            <!-- description -->
            <div class="mb-3">
                <label class='from-label' for="description">Description</label>
                <textarea type="text" class="form-control" id="description" name="campground[description]" required><%=campground.description%></textarea>
            </div>
            
            <!-- price -->
            <label class='from-label' for="price">Campground Price</label>
            <div class="input-group mt-2 mb-3">
                <span class="input-group-text" id="price">$</span>
                <input type="text" id="price" class="form-control" placeholder="0" aria-label="price" aria-describedby="price" name="campground[price]" value="<%=campground.price%> ">                
            </div>  
            
            <!-- button -->
            <div class="mb-3 ">
                <button class="btn btn-success ">Update Campground</button>
            </div>
            
    <a class="link-primary" href="/campgrounds/<%= campground._id%>">Back To Campground</a>

    <script>
        (function () {
      'use strict'
    
      // Fetch all the forms we want to apply custom Bootstrap validation styles to
      const forms = document.querySelectorAll('.needs-validation')
    
      // Loop over them and prevent submission
      Array.from(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
    
            form.classList.add('was-validated')
          }, false)
        })
    })()
    </script>